<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MedTrack.Views.MedicamentsPage"
             Title="MedicamentsPage"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#0066FF">

    <Grid>
        <!-- Page principale -->
        <Grid RowDefinitions="Auto,*">
            
            <!-- Header bleu -->
            <VerticalStackLayout Grid.Row="0" 
                                Padding="20,40,20,20"
                                Spacing="15">
                
                <!-- Titre avec bouton retour -->
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <Border BackgroundColor="Transparent"
                            StrokeThickness="0"
                            Padding="5">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnBackClicked"/>
                        </Border.GestureRecognizers>
                        <Label Text="â†"
                               FontSize="28"
                               TextColor="White"
                               FontAttributes="Bold"/>
                    </Border>

                    <Label Grid.Column="1"
                           Text="MÃ©dicaments"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="White"
                           VerticalOptions="Center"
                           Margin="10,0,0,0"/>

                    <Border Grid.Column="2"
                            BackgroundColor="White"
                            StrokeThickness="0"
                            Padding="8"
                            WidthRequest="40"
                            HeightRequest="40">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnFilterClicked"/>
                        </Border.GestureRecognizers>
                        <Label Text="âš™"
                               FontSize="20"
                               TextColor="#0066FF"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>
                </Grid>

                <!-- Barre de recherche -->
                <Border BackgroundColor="White"
                        StrokeThickness="0"
                        Padding="15,0"
                        HeightRequest="50">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="25"/>
                    </Border.StrokeShape>
                    
                    <Grid ColumnDefinitions="40,*">
                        <Label Text="ðŸ”"
                               FontSize="20"
                               TextColor="#999"
                               VerticalOptions="Center"/>
                        <Entry x:Name="SearchEntry"
                               Grid.Column="1"
                               Placeholder="rechercher l'ID ..."
                               PlaceholderColor="#CCCCCC"
                               BackgroundColor="Transparent"
                               TextColor="#333333"
                               TextChanged="OnSearchTextChanged"/>
                    </Grid>
                </Border>

            </VerticalStackLayout>

            <!-- Contenu blanc avec liste -->
            <Border Grid.Row="1"
                    BackgroundColor="White"
                    Padding="20,20,20,80">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="30,30,0,0"/>
                </Border.StrokeShape>

                <Grid>
                    <!-- Liste des mÃ©dicaments -->
                    <CollectionView x:Name="MedicamentsCollection"
                                   SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border BackgroundColor="#E8F4FF"
                                        StrokeThickness="0"
                                        Margin="0,0,0,15"
                                        Padding="15"
                                        HeightRequest="60">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="15"/>
                                    </Border.StrokeShape>
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnMedicamentClicked"
                                                            CommandParameter="{Binding .}"/>
                                    </Border.GestureRecognizers>

                                    <Grid ColumnDefinitions="50,*">
                                        <!-- IcÃ´ne -->
                                        <Border BackgroundColor="#0066FF"
                                                StrokeThickness="0"
                                                WidthRequest="40"
                                                HeightRequest="40"
                                                VerticalOptions="Center">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="20"/>
                                            </Border.StrokeShape>
                                            <Label Text="ðŸ’Š"
                                                   FontSize="20"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center"/>
                                        </Border>

                                        <!-- Nom du mÃ©dicament -->
                                        <Label Grid.Column="1"
                                               Text="{Binding Nom}"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               TextColor="#000000"
                                               VerticalOptions="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <!-- Message si vide -->
                    <VerticalStackLayout x:Name="EmptyStateLayout"
                                       IsVisible="False"
                                       VerticalOptions="Center"
                                       HorizontalOptions="Center"
                                       Spacing="15">
                        <Label Text="ðŸ“‹"
                               FontSize="60"
                               HorizontalOptions="Center"
                               Opacity="0.3"/>
                        <Label Text="Aucun mÃ©dicament"
                               FontSize="18"
                               TextColor="#999999"
                               HorizontalOptions="Center"/>
                        <Label Text="Appuyez sur + pour en ajouter"
                               FontSize="14"
                               TextColor="#CCCCCC"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>

                    <!-- Indicateur de chargement -->
                    <ActivityIndicator x:Name="LoadingIndicator"
                                     IsRunning="False"
                                     Color="#0066FF"
                                     VerticalOptions="Center"
                                     HorizontalOptions="Center"/>
                </Grid>
            </Border>

            <!-- Bouton flottant d'ajout -->
            <Border Grid.Row="1"
                    BackgroundColor="#0066FF"
                    StrokeThickness="0"
                    WidthRequest="60"
                    HeightRequest="60"
                    VerticalOptions="End"
                    HorizontalOptions="End"
                    Margin="0,0,30,30">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="30"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black"
                            Opacity="0.3"
                            Radius="10"
                            Offset="0,5"/>
                </Border.Shadow>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnAddClicked"/>
                </Border.GestureRecognizers>

                <Label Text="ðŸ“+"
                       FontSize="28"
                       TextColor="White"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Border>

        </Grid>

        <!-- MODAL D'AJOUT (overlay) -->
        <Grid x:Name="AddModal"
              IsVisible="False"
              BackgroundColor="#80000000">
            
            <!-- Overlay cliquable -->
            <BoxView Color="Transparent">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnModalBackgroundClicked"/>
                </BoxView.GestureRecognizers>
            </BoxView>

            <!-- Card du modal -->
            <Border BackgroundColor="White"
                    StrokeThickness="0"
                    VerticalOptions="Center"
                    Margin="20,0"
                    Padding="25,30"
                    InputTransparent="False">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20"/>
                </Border.StrokeShape>

                <ScrollView>
                    <VerticalStackLayout Spacing="20">
                        
                        <!-- En-tÃªte avec bouton fermer -->
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Text="Ajout"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   TextColor="#000000"
                                   VerticalOptions="Center"/>
                            
                            <Label Grid.Column="1"
                                   Text="âœ•"
                                   FontSize="24"
                                   TextColor="#FF0000"
                                   VerticalOptions="Center">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnCloseModalClicked"/>
                                </Label.GestureRecognizers>
                            </Label>
                        </Grid>

                        <Label Text="veuillez valider les informations&#x0a;suivantes:"
                               FontSize="14"
                               TextColor="#666666"
                               Margin="0,0,0,10"/>

                        <!-- Nom du mÃ©dicament -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Nom du mÃ©dicament"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#000000"/>
                            <Border BackgroundColor="#F5F5F5"
                                    StrokeThickness="0"
                                    Padding="15">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10"/>
                                </Border.StrokeShape>
                                <Entry x:Name="NomEntry"
                                       Placeholder="........"
                                       PlaceholderColor="#CCCCCC"
                                       BackgroundColor="Transparent"
                                       TextColor="#000000"/>
                            </Border>
                        </VerticalStackLayout>

                        <!-- Dosage -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Dosage"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#000000"/>
                            <Border BackgroundColor="#F5F5F5"
                                    StrokeThickness="0"
                                    Padding="15">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10"/>
                                </Border.StrokeShape>
                                <Entry x:Name="DosageEntry"
                                       Placeholder="........"
                                       PlaceholderColor="#CCCCCC"
                                       BackgroundColor="Transparent"
                                       TextColor="#000000"/>
                            </Border>
                        </VerticalStackLayout>

                        <!-- FrÃ©quence -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="FrÃ©quence"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#000000"/>
                            
                            <!-- Boutons de frÃ©quence -->
                            <Grid ColumnDefinitions="*,*,*"
                                  ColumnSpacing="10">
                                
                                <Border Grid.Column="0"
                                        x:Name="JournalierBorder"
                                        BackgroundColor="White"
                                        Stroke="#DDDDDD"
                                        StrokeThickness="1"
                                        Padding="10"
                                        HeightRequest="40">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="20"/>
                                    </Border.StrokeShape>
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnJournalierClicked"/>
                                    </Border.GestureRecognizers>
                                    <Label x:Name="JournalierLabel"
                                           Text="Journalier"
                                           FontSize="13"
                                           TextColor="#666666"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Border>

                                <Border Grid.Column="1"
                                        x:Name="DeuxFoisBorder"
                                        BackgroundColor="White"
                                        Stroke="#DDDDDD"
                                        StrokeThickness="1"
                                        Padding="10"
                                        HeightRequest="40">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="20"/>
                                    </Border.StrokeShape>
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnDeuxFoisClicked"/>
                                    </Border.GestureRecognizers>
                                    <Label x:Name="DeuxFoisLabel"
                                           Text="2x par jour"
                                           FontSize="13"
                                           TextColor="#666666"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Border>

                                <Border Grid.Column="2"
                                        x:Name="HebdomadaireBorder"
                                        BackgroundColor="White"
                                        Stroke="#DDDDDD"
                                        StrokeThickness="1"
                                        Padding="10"
                                        HeightRequest="40">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="20"/>
                                    </Border.StrokeShape>
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnHebdomadaireClicked"/>
                                    </Border.GestureRecognizers>
                                    <Label x:Name="HebdomadaireLabel"
                                           Text="Hebdomadaire"
                                           FontSize="13"
                                           TextColor="#666666"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Border>
                            </Grid>

                            <!-- Champ Autre -->
                            <Border BackgroundColor="#F5F5F5"
                                    StrokeThickness="0"
                                    Padding="15"
                                    Margin="0,10,0,0">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10"/>
                                </Border.StrokeShape>
                                <Entry x:Name="AutreFrequenceEntry"
                                       Placeholder="Autre ...."
                                       PlaceholderColor="#CCCCCC"
                                       BackgroundColor="Transparent"
                                       TextColor="#000000"/>
                            </Border>
                        </VerticalStackLayout>

                        <!-- Indicateur de chargement -->
                        <ActivityIndicator x:Name="AddLoadingIndicator"
                                         IsRunning="False"
                                         Color="#0066FF"
                                         Margin="0,10"/>

                        <!-- Bouton Ajouter -->
                        <Button Text="Ajouter"
                                BackgroundColor="#0066FF"
                                TextColor="White"
                                FontSize="18"
                                FontAttributes="Bold"
                                CornerRadius="25"
                                HeightRequest="50"
                                Margin="0,10,0,0"
                                Clicked="OnAjouterClicked"/>

                    </VerticalStackLayout>
                </ScrollView>
            </Border>
        </Grid>

    </Grid>
</ContentPage>
