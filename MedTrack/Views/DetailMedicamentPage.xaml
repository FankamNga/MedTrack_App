<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MedTrack.Views.DetailMedicamentPage"
             Title="DetailMedicamentPage"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="White">

    <Grid>
        <!-- Page principale -->
        <Grid RowDefinitions="250,*">

            <!-- Image en haut -->
            <Grid Grid.Row="0">
                <Image Source="medoc_detail_bg.jpg"
                       Aspect="AspectFill"/>

                <!-- Overlay -->
                <BoxView Color="Black" Opacity="0.2"/>

                <!-- Bouton retour -->
                <Border BackgroundColor="White"
                        StrokeThickness="0"
                        WidthRequest="40"
                        HeightRequest="40"
                        Margin="20,40,0,0"
                        VerticalOptions="Start"
                        HorizontalOptions="Start">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnBackClicked"/>
                    </Border.GestureRecognizers>
                    <Label Text="←"
                           FontSize="24"
                           TextColor="#FF6633"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </Border>
            </Grid>

            <!-- Contenu -->
            <ScrollView Grid.Row="1">
                <VerticalStackLayout Padding="25,20" Spacing="20">

                    <!-- Nom du médicament -->
                    <Label x:Name="NomLabel"
                           Text="Fluimucil"
                           FontSize="32"
                           FontAttributes="Bold"
                           TextColor="#000000"/>

                    <!-- Substance -->
                    <Label x:Name="SubstanceLabel"
                           Text="acetilcisteina"
                           FontSize="16"
                           TextColor="#666666"
                           Margin="0,-10,0,10"/>

                    <!-- Card d'informations -->
                    <Border BackgroundColor="#E8F4FF"
                            StrokeThickness="0"
                            Padding="20">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="15"/>
                        </Border.StrokeShape>

                        <VerticalStackLayout Spacing="15">

                            <!-- Fréquence -->
                            <VerticalStackLayout Spacing="5">
                                <Label Text="Fréquence"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="#0066FF"/>
                                <Label x:Name="FrequenceLabel"
                                       Text="2x par jour"
                                       FontSize="16"
                                       TextColor="#000000"/>
                            </VerticalStackLayout>

                            <!-- Dosage -->
                            <VerticalStackLayout Spacing="5">
                                <Label Text="dosage"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="#0066FF"/>
                                <HorizontalStackLayout Spacing="5">
                                    <Label Text="•"
                                           FontSize="16"
                                           TextColor="#0066FF"
                                           VerticalOptions="Start"/>
                                    <Label x:Name="DosageLabel"
                                           Text="à prendre dans une tasse de thé à jeune"
                                           FontSize="16"
                                           TextColor="#000000"
                                           LineBreakMode="WordWrap"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>

                        </VerticalStackLayout>
                    </Border>

                    <!-- Indicateur de chargement -->
                    <ActivityIndicator x:Name="LoadingIndicator"
                                     IsRunning="False"
                                     Color="#00CC44"
                                     Margin="0,20"/>

                    <!-- Boutons d'action -->
                    <VerticalStackLayout Spacing="15" Margin="0,30,0,20">

                        <!-- Bouton Modifier -->
                        <Button Text="Modifier"
                                BackgroundColor="#00CC44"
                                TextColor="White"
                                FontSize="18"
                                FontAttributes="Bold"
                                CornerRadius="25"
                                HeightRequest="50"
                                Clicked="OnModifierClicked"/>

                        <!-- Bouton Supprimer -->
                        <Button Text="Supprimer"
                                BackgroundColor="#FF3333"
                                TextColor="White"
                                FontSize="18"
                                FontAttributes="Bold"
                                CornerRadius="25"
                                HeightRequest="50"
                                Clicked="OnSupprimerClicked"/>
                    </VerticalStackLayout>

                </VerticalStackLayout>
            </ScrollView>

        </Grid>

        <!-- MODAL DE MODIFICATION (overlay) -->
        <Grid x:Name="ModifyModal"
              IsVisible="False"
              BackgroundColor="#80000000">

            <!-- Overlay cliquable -->
            <BoxView Color="Transparent">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnModalBackgroundClicked"/>
                </BoxView.GestureRecognizers>
            </BoxView>

            <!-- Card du modal -->
            <Border BackgroundColor="White"
                    StrokeThickness="0"
                    VerticalOptions="Center"
                    Margin="20,0"
                    Padding="25,30"
                    InputTransparent="False">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20"/>
                </Border.StrokeShape>

                <ScrollView>
                    <VerticalStackLayout Spacing="20">

                        <!-- En-tête avec bouton fermer -->
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Text="Modification"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   TextColor="#000000"
                                   VerticalOptions="Center"/>

                            <Label Grid.Column="1"
                                   Text="✕"
                                   FontSize="24"
                                   TextColor="#FF0000"
                                   VerticalOptions="Center">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnCloseModalClicked"/>
                                </Label.GestureRecognizers>
                            </Label>
                        </Grid>

                        <Label Text="veuillez valider les informations&#x0a;suivantes:"
                               FontSize="14"
                               TextColor="#666666"
                               Margin="0,0,0,10"/>

                        <!-- Nom du médicament -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Nom du médicament"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#000000"/>
                            <Border BackgroundColor="#F5F5F5"
                                    StrokeThickness="0"
                                    Padding="15">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10"/>
                                </Border.StrokeShape>
                                <Entry x:Name="EditNomEntry"
                                       BackgroundColor="Transparent"
                                       TextColor="#000000"/>
                            </Border>
                        </VerticalStackLayout>

                        <!-- Dosage -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Dosage"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#000000"/>
                            <Border BackgroundColor="#F5F5F5"
                                    StrokeThickness="0"
                                    Padding="15">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10"/>
                                </Border.StrokeShape>
                                <Entry x:Name="EditDosageEntry"
                                       Placeholder="entrer le dosage ..."
                                       PlaceholderColor="#CCCCCC"
                                       BackgroundColor="Transparent"
                                       TextColor="#000000"/>
                            </Border>
                        </VerticalStackLayout>

                        <!-- Fréquence -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Fréquence"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#000000"/>

                            <!-- Boutons de fréquence -->
                            <Grid ColumnDefinitions="*,*,*"
                                  ColumnSpacing="10">

                                <Border Grid.Column="0"
                                        x:Name="EditJournalierBorder"
                                        BackgroundColor="White"
                                        Stroke="#DDDDDD"
                                        StrokeThickness="1"
                                        Padding="10"
                                        HeightRequest="40">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="20"/>
                                    </Border.StrokeShape>
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnEditJournalierClicked"/>
                                    </Border.GestureRecognizers>
                                    <Label x:Name="EditJournalierLabel"
                                           Text="Journalier"
                                           FontSize="13"
                                           TextColor="#666666"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Border>

                                <Border Grid.Column="1"
                                        x:Name="EditDeuxFoisBorder"
                                        BackgroundColor="White"
                                        Stroke="#DDDDDD"
                                        StrokeThickness="1"
                                        Padding="10"
                                        HeightRequest="40">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="20"/>
                                    </Border.StrokeShape>
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnEditDeuxFoisClicked"/>
                                    </Border.GestureRecognizers>
                                    <Label x:Name="EditDeuxFoisLabel"
                                           Text="2x par jour"
                                           FontSize="13"
                                           TextColor="#666666"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Border>

                                <Border Grid.Column="2"
                                        x:Name="EditHebdomadaireBorder"
                                        BackgroundColor="White"
                                        Stroke="#DDDDDD"
                                        StrokeThickness="1"
                                        Padding="10"
                                        HeightRequest="40">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="20"/>
                                    </Border.StrokeShape>
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnEditHebdomadaireClicked"/>
                                    </Border.GestureRecognizers>
                                    <Label x:Name="EditHebdomadaireLabel"
                                           Text="Hebdomadaire"
                                           FontSize="13"
                                           TextColor="#666666"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Border>
                            </Grid>

                            <!-- Champ Autre -->
                            <Border BackgroundColor="#F5F5F5"
                                    StrokeThickness="0"
                                    Padding="15"
                                    Margin="0,10,0,0">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10"/>
                                </Border.StrokeShape>
                                <Entry x:Name="EditAutreFrequenceEntry"
                                       Placeholder="Autre ...."
                                       PlaceholderColor="#CCCCCC"
                                       BackgroundColor="Transparent"
                                       TextColor="#000000"/>
                            </Border>
                        </VerticalStackLayout>

                        <!-- Indicateur de chargement -->
                        <ActivityIndicator x:Name="ModifyLoadingIndicator"
                                         IsRunning="False"
                                         Color="#0066FF"
                                         Margin="0,10"/>

                        <!-- Bouton Modifier -->
                        <Button Text="Modifier"
                                BackgroundColor="#0066FF"
                                TextColor="White"
                                FontSize="18"
                                FontAttributes="Bold"
                                CornerRadius="25"
                                HeightRequest="50"
                                Margin="0,10,0,0"
                                Clicked="OnSaveModificationClicked"/>

                    </VerticalStackLayout>
                </ScrollView>
            </Border>
        </Grid>

    </Grid>
</ContentPage>
