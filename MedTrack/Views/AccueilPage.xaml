                                        CornerRadius="15"
                                        Padding="20,8"
                                        Clicked="OnVoirActualiteClicked"/>
                            </Grid>
                        </VerticalStackLayout>
                    </Grid>
                </Border>

                <!-- Section Sections -->
                <Label Text="Sections"
                       FontSize="22"
                       FontAttributes="Bold"
                       TextColor="#000000"
                       Margin="0,10,0,0"/>

                <!-- Grid des sections -->
                <Grid RowDefinitions="150,150"
