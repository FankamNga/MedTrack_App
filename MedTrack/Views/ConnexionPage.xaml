<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MedTrack.Views.ConnexionPage"
             Title="ConnexionPage"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#0066FF">

    <Grid>
        <!-- Background bleu -->
        <BoxView Color="#0052CC" 
                 Opacity="0.3"
                 HeightRequest="300"
                 VerticalOptions="Start"/>

        <ScrollView>
            <VerticalStackLayout Spacing="0">
                
                <!-- Bouton retour -->
                <ImageButton Source="arrow_back.png"
                            WidthRequest="40"
                            HeightRequest="40"
                            Margin="20,40,0,0"
                            HorizontalOptions="Start"
                            BackgroundColor="Transparent"
                            Clicked="OnBackClicked"/>

                <!-- Carte blanche avec formulaire -->
                <Border BackgroundColor="White"
                        Margin="0,120,0,0"
                        Padding="30,40">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="30,30,0,0"/>
                    </Border.StrokeShape>

                    <VerticalStackLayout Spacing="20">
                        
                        <!-- Titre -->
                        <Label Text="CONNEXION"
                               FontSize="28"
                               FontAttributes="Bold"
                               TextColor="#000000"/>

                        <Label Text="Veuillez remplir les informations"
                               FontSize="14"
                               TextColor="#666666"
                               Margin="0,0,0,10"/>

                        <!-- Champ Nom/Email -->
                        <Border BackgroundColor="#F5F5F5"
                                StrokeThickness="0"
                                Padding="15,0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12"/>
                            </Border.StrokeShape>
                            
                            <Grid ColumnDefinitions="40,*">
                                <Label Text="ðŸ‘¤" 
                                       FontSize="20"
                                       TextColor="#666"
                                       VerticalOptions="Center"/>
                                <Entry x:Name="EmailEntry"
                                       Grid.Column="1"
                                       Placeholder="Franck_"
                                       BackgroundColor="Transparent"
                                       TextColor="#000000"/>
                            </Grid>
                        </Border>

                        <!-- Champ Mot de passe -->
                        <Border BackgroundColor="#F5F5F5"
                                StrokeThickness="0"
                                Padding="15,0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12"/>
                            </Border.StrokeShape>
                            
                            <Grid ColumnDefinitions="40,*,40">
                                <Label Text="ðŸ”’" 
                                       FontSize="20"
                                       TextColor="#666"
                                       VerticalOptions="Center"/>
                                <Entry x:Name="PasswordEntry"
                                       Grid.Column="1"
                                       Placeholder="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢"
                                       IsPassword="True"
                                       BackgroundColor="Transparent"
                                       TextColor="#000000"/>
                                <ImageButton Grid.Column="2"
                                           x:Name="PasswordToggle"
                                           Source="eye.png"
                                           WidthRequest="24"
                                           HeightRequest="24"
                                           BackgroundColor="Transparent"
                                           Clicked="OnPasswordToggleClicked"/>
                            </Grid>
                        </Border>

                        <!-- Se souvenir de moi -->
                        <Grid ColumnDefinitions="*,Auto" Margin="0,10,0,0">
                            <Label Text="Se souvenir de moi"
                                   FontSize="14"
                                   TextColor="#333333"
                                   VerticalOptions="Center"/>
                            <Switch x:Name="RememberSwitch"
                                    Grid.Column="1"
                                    OnColor="#0066FF"
                                    ThumbColor="White"/>
                        </Grid>

                        <!-- Mot de passe oubliÃ© -->
                        <Label Text="Mot de passe oubliÃ©"
                               FontSize="14"
                               TextColor="#0066FF"
                               HorizontalOptions="Start"
                               Margin="0,5,0,10">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnForgotPasswordClicked"/>
                            </Label.GestureRecognizers>
                        </Label>

                        <!-- ActivityIndicator -->
                        <ActivityIndicator x:Name="LoadingIndicator"
                                         IsRunning="False"
                                         Color="#0066FF"
                                         Margin="0,10"/>

                        <!-- Bouton Se connecter -->
                        <Button Text="Se connecter"
                                BackgroundColor="#0066FF"
                                TextColor="White"
                                FontSize="18"
                                FontAttributes="Bold"
                                CornerRadius="25"
                                HeightRequest="50"
                                Margin="0,10,0,0"
                                Clicked="OnLoginClicked"/>

                        <!-- Lien inscription -->
                        <HorizontalStackLayout HorizontalOptions="Center"
                                             Spacing="5"
                                             Margin="0,20,0,0">
                            <Label Text="Vous n'avez pas de compte ?"
                                   FontSize="14"
                                   TextColor="#666666"/>
                            <Label Text="S'inscrire"
                                   FontSize="14"
                                   TextColor="#0066FF"
                                   FontAttributes="Bold">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnSignupClicked"/>
                                </Label.GestureRecognizers>
                            </Label>
                        </HorizontalStackLayout>

                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
