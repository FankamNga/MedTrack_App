<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MedTrack.Views.DetailRendezVousPage"
             Title="DetailRendezVousPage"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="White">

    <Grid>
        <!-- Page principale -->
        <Grid RowDefinitions="250,*">
            
            <!-- Image en haut -->
            <Grid Grid.Row="0">
                <Image Source="rdv_detail_bg.jpg"
                       Aspect="AspectFill"/>
                
                <!-- Overlay -->
                <BoxView Color="Black" Opacity="0.2"/>

                <!-- Bouton retour -->
                <Border BackgroundColor="White"
                        StrokeThickness="0"
                        WidthRequest="40"
                        HeightRequest="40"
                        Margin="20,40,0,0"
                        VerticalOptions="Start"
                        HorizontalOptions="Start">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnBackClicked"/>
                    </Border.GestureRecognizers>
                    <Label Text="â†"
                           FontSize="24"
                           TextColor="#FF6633"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </Border>

                <!-- IcÃ´ne RDV en haut Ã  droite -->
                <Label Text="ðŸŽ—ï¸"
                       FontSize="50"
                       Margin="0,40,20,0"
                       VerticalOptions="Start"
                       HorizontalOptions="End"/>
            </Grid>

            <!-- Contenu -->
            <ScrollView Grid.Row="1">
                <VerticalStackLayout Padding="25,20" Spacing="20">
                    
                    <!-- Date du rendez-vous -->
                    <Label x:Name="DateLabel"
                           Text="12 DÃ©cembre 2025"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="#000000"/>

                    <!-- Heure -->
                    <Label x:Name="HeureLabel"
                           Text="13 : 00"
                           FontSize="20"
                           TextColor="#666666"
                           Margin="0,-10,0,10"/>

                    <!-- Card d'informations verte -->
                    <Border BackgroundColor="#D5FFE8"
                            StrokeThickness="0"
                            Padding="20">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="15"/>
                        </Border.StrokeShape>

                        <VerticalStackLayout Spacing="15">
                            
                            <!-- Lieu -->
                            <VerticalStackLayout Spacing="5">
                                <Label Text="Lieu"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="#00DD66"/>
                                <Label x:Name="LieuLabel"
                                       Text="Rond Point bastos"
                                       FontSize="16"
                                       TextColor="#000000"/>
                            </VerticalStackLayout>

                            <!-- Type de Rendez-vous -->
                            <VerticalStackLayout Spacing="5">
                                <Label Text="Type de Rendez-vous"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="#00DD66"/>
                                <HorizontalStackLayout Spacing="5">
                                    <Label Text="â—"
                                           FontSize="16"
                                           TextColor="#00DD66"
                                           VerticalOptions="Start"/>
                                    <Label x:Name="TypeLabel"
                                           Text="Consultation"
                                           FontSize="16"
                                           TextColor="#000000"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>

                            <!-- Notes -->
                            <VerticalStackLayout Spacing="5">
                                <Label Text="Notes"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="#00DD66"/>
                                <Label x:Name="NotesLabel"
                                       Text="aucune autre note..."
                                       FontSize="16"
                                       TextColor="#000000"
                                       LineBreakMode="WordWrap"/>
                            </VerticalStackLayout>

                        </VerticalStackLayout>
                    </Border>

                    <!-- Indicateur de chargement -->
                    <ActivityIndicator x:Name="LoadingIndicator"
                                     IsRunning="False"
                                     Color="#00DD66"
                                     Margin="0,20"/>

                    <!-- Boutons d'action -->
                    <VerticalStackLayout Spacing="15" Margin="0,30,0,20">
                        
                        <!-- Bouton Modifier -->
                        <Button Text="Modifier"
                                BackgroundColor="#00DD66"
                                TextColor="White"
                                FontSize="18"
                                FontAttributes="Bold"
                                CornerRadius="25"
                                HeightRequest="50"
                                Clicked="OnModifierClicked"/>

                        <!-- Bouton Supprimer -->
                        <Button Text="Supprimer"
                                BackgroundColor="#FF3333"
                                TextColor="White"
                                FontSize="18"
                                FontAttributes="Bold"
                                CornerRadius="25"
                                HeightRequest="50"
                                Clicked="OnSupprimerClicked"/>
                    </VerticalStackLayout>

                </VerticalStackLayout>
            </ScrollView>

        </Grid>

        <!-- MODAL DE MODIFICATION (overlay) -->
        <Grid x:Name="ModifyModal"
              IsVisible="False"
              BackgroundColor="#80000000">
            
            <!-- Overlay cliquable -->
            <BoxView Color="Transparent">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnModalBackgroundClicked"/>
                </BoxView.GestureRecognizers>
            </BoxView>

            <!-- Card du modal -->
            <Border BackgroundColor="White"
                    StrokeThickness="0"
                    VerticalOptions="Center"
                    Margin="20,0"
                    Padding="25,30"
                    InputTransparent="False">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20"/>
                </Border.StrokeShape>

                <ScrollView>
                    <VerticalStackLayout Spacing="20">
                        
                        <!-- En-tÃªte -->
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Text="Modification"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   TextColor="#000000"
                                   VerticalOptions="Center"/>
                            
                            <Label Grid.Column="1"
                                   Text="âœ•"
                                   FontSize="24"
                                   TextColor="#FF0000"
                                   VerticalOptions="Center">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnCloseModalClicked"/>
                                </Label.GestureRecognizers>
                            </Label>
                        </Grid>

                        <Label Text="veuillez valider les informations&#x0a;suivantes:"
                               FontSize="14"
                               TextColor="#666666"
                               Margin="0,0,0,10"/>

                        <!-- Date et Heure -->
                        <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                            <!-- Date -->
                            <VerticalStackLayout Grid.Column="0" Spacing="8">
                                <Label Text="Date"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="#000000"/>
                                <Border BackgroundColor="#F5F5F5"
                                        StrokeThickness="0"
                                        Padding="10">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="10"/>
                                    </Border.StrokeShape>
                                    <Grid ColumnDefinitions="*,Auto">
                                        <DatePicker x:Name="EditDatePicker"
                                                   BackgroundColor="Transparent"
                                                   TextColor="#000000"
                                                   Format="dd.MM.yyyy"/>
                                        <Label Grid.Column="1"
                                               Text="ðŸ“…"
                                               FontSize="20"
                                               TextColor="#00DD66"
                                               VerticalOptions="Center"/>
                                    </Grid>
                                </Border>
                            </VerticalStackLayout>

                            <!-- Heure -->
                            <VerticalStackLayout Grid.Column="1" Spacing="8">
                                <Label Text="Heure"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="#000000"/>
                                <Border BackgroundColor="#F5F5F5"
                                        StrokeThickness="0"
                                        Padding="10">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="10"/>
                                    </Border.StrokeShape>
                                    <TimePicker x:Name="EditTimePicker"
                                               BackgroundColor="Transparent"
                                               TextColor="#000000"
                                               Format="HH : mm"/>
                                </Border>
                            </VerticalStackLayout>
                        </Grid>

                        <!-- Lieu -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Lieu"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#000000"/>
                            <Border BackgroundColor="#F5F5F5"
                                    StrokeThickness="0"
                                    Padding="15">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10"/>
                                </Border.StrokeShape>
                                <Grid ColumnDefinitions="*,Auto">
                                    <Entry x:Name="EditLieuEntry"
                                           BackgroundColor="Transparent"
                                           TextColor="#000000"/>
                                    <Label Grid.Column="1"
                                           Text="ðŸ“"
                                           FontSize="20"
                                           TextColor="#00DD66"
                                           VerticalOptions="Center"/>
                                </Grid>
                            </Border>
                        </VerticalStackLayout>

                        <!-- Type de Rendez-vous -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Type de Rendez-vous"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#000000"/>
                            <Border BackgroundColor="#F5F5F5"
                                    StrokeThickness="0"
                                    Padding="15">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10"/>
                                </Border.StrokeShape>
                                <Entry x:Name="EditTypeEntry"
                                       BackgroundColor="Transparent"
                                       TextColor="#000000"/>
                            </Border>
                        </VerticalStackLayout>

                        <!-- Indicateur de chargement -->
                        <ActivityIndicator x:Name="ModifyLoadingIndicator"
                                         IsRunning="False"
                                         Color="#00DD66"
                                         Margin="0,10"/>

                        <!-- Bouton Modifier -->
                        <Button Text="Modifier"
                                BackgroundColor="#00DD66"
                                TextColor="White"
                                FontSize="18"
                                FontAttributes="Bold"
                                CornerRadius="25"
                                HeightRequest="50"
                                Margin="0,10,0,0"
                                Clicked="OnSaveModificationClicked"/>

                    </VerticalStackLayout>
                </ScrollView>
            </Border>
        </Grid>

    </Grid>
</ContentPage>
