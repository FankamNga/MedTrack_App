<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- MEDITRACK Colors -->
    <Color x:Key="Primary">#0066FF</Color>
    <Color x:Key="PrimaryDark">#0052CC</Color>
    <Color x:Key="PrimaryLight">#E8F4FF</Color>
    
    <Color x:Key="Secondary">#00FF88</Color>
    <Color x:Key="SecondaryDark">#00DD66</Color>
    <Color x:Key="SecondaryLight">#D5FFE8</Color>
    
    <Color x:Key="Tertiary">#FF9966</Color>
    <Color x:Key="TertiaryLight">#FFE8DD</Color>
    
    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="Gray100">#F5F5F5</Color>
    <Color x:Key="Gray200">#EEEEEE</Color>
    <Color x:Key="Gray300">#E0E0E0</Color>
    <Color x:Key="Gray400">#BDBDBD</Color>
    <Color x:Key="Gray500">#9E9E9E</Color>
    <Color x:Key="Gray600">#757575</Color>
    <Color x:Key="Gray900">#212121</Color>

    <Color x:Key="Success">#00CC44</Color>
    <Color x:Key="Warning">#FFC107</Color>
    <Color x:Key="Danger">#FF3333</Color>
    <Color x:Key="Info">#2196F3</Color>

</ResourceDictionary>
